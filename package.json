{
  "name": "type-lint",
  "private": true,
  "type": "module",
  "scripts": {
    "postinstall": "cd dev-plugin && bun link && cd .. && bun link dev-plugin --ignore-scripts",
    "dev": "esbuild --bundle dev-plugin/index.ts --outfile=dev-plugin/index.js --platform=node --format=cjs --external:typescript --external:esbuild --external:ts-api-utils --watch",
    "codegen": "bun scripts/codegen.ts",
    "prettier-all": "bun prettier-ci --write",
    "prettier-ci": "prettier --cache --check '**/*.{ts,json,md,yml}'",
    "ci": "bun prettier-ci && bun codegen --check && tsc"
  },
  "prettier": {
    "plugins": [
      "@arnaud-barre/prettier-plugin-sort-imports"
    ]
  },
  "peerDependencies": {
    "typescript": "^5.5.2"
  },
  "dependencies": {
    "esbuild": "^0.21.5",
    "ts-api-utils": "^1.3.0"
  },
  "devDependencies": {
    "@arnaud-barre/prettier-plugin-sort-imports": "^0.1.3",
    "@babel/parser": "^7.23.6",
    "@babel/traverse": "^7.23.6",
    "@types/babel__generator": "^7.6.8",
    "@types/babel__traverse": "^7.20.4",
    "@types/bun": "^1.0.0",
    "@types/react": "^18.2.48",
    "prettier": "3.0.3",
    "typescript": "^5.5.2"
  }
}
