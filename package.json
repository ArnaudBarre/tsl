{
  "name": "type-lint",
  "private": true,
  "type": "module",
  "scripts": {
    "codegen": "bun scripts/codegen.ts",
    "prettier-all": "bun prettier-ci --write",
    "prettier-ci": "prettier --cache --check '**/*.{ts,json,md,yml}'",
    "ci": "bun prettier-ci && bun codegen --check"
  },
  "prettier": {
    "plugins": [
      "@arnaud-barre/prettier-plugin-sort-imports"
    ]
  },
  "devDependencies": {
    "@arnaud-barre/prettier-plugin-sort-imports": "^0.1.3",
    "@types/bun": "^1.0.0",
    "prettier": "3.0.3",
    "typescript": "^5.3.3"
  }
}
